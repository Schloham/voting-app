<div class="section no-pad-bot" id="index-banner">
  <div class="container">
    <br><br>
    <h3>New Poll</h3>
    <div class="row">
        <form method="post" action="/users/newpoll" class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <input id="pollname" type="text" class="validate" name="pollname">
              <label for="pollname">Name</label>
            </div>
          </div>
          <h5>Options</h5>
