              <div class="input-field col s12">
                <input type="text" class="validate" name="options">
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input type="text" class="validate" name="options">
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input type="text" class="validate" name="options">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s9">
              <button class="btn waves-effect waves-light light-blue lighten-1" type="button" onclick="addOption()">
                <i class="material-icons">add</i>
              </button>
            </div>
            <div class="col s3">
              <button class="btn waves-effect waves-light light-blue lighten-1" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        </form>
      </div>
    <br><br>

  </div>
</div>
<script>
function addOption() {
  var newElement = document.createElement('div');
  newElement.innerHTML = '<div class="row"><div class="input-field col s12"><input type="text" class="validate" name="options"></div></div>';
  document.getElementById('optiondiv').appendChild(newElement);
}
</script>
